{
  "name": "creative-brain",
  "version": "2.3.1",
  "description": "AI创意大脑 - 基于LLM的专业化创意开发平台",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "concurrently \"nodemon api/server.js\" \"node frontend/server.js\"",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e:cypress": "cypress run",
    "test:e2e:playwright": "playwright test",
    "test:api": "node tests/api-test.js",
    "test:db": "node tests/db-test.js",
    "test:llm-api": "node tests/llm-api-test.js",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:migrate": "node scripts/migrate-db.js",
    "create:admin": "node scripts/create-admin.js",
    "diagnostics": "node scripts/diagnostics.js",
    "health-check": "node scripts/health-check.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.6.7",
    "redis": "^4.1.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "cypress": "^10.0.2",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "playwright": "^1.52.0",
    "supertest": "^6.2.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "AI Creative Team",
  "license": "MIT",
  "private": true
}